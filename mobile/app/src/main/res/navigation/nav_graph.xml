<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_myFeedbacksFragment"
            app:destination="@id/myFeedbacksFragment" />
        <action
            android:id="@+id/action_loginFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_loginFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/myFeedbacksFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.MyFeedbacksFragment"
        android:label="MyFeedbacksFragment" >
        <action
            android:id="@+id/action_myFeedbacksFragment_to_createHospitalFeedbackFragment"
            app:destination="@id/createHospitalFeedbackFragment" />
        <action
            android:id="@+id/action_myFeedbacksFragment_to_createDoctorFeedbackFragment"
            app:destination="@id/createDoctorFeedbackFragment" />
    </fragment>
    <fragment
        android:id="@+id/createHospitalFeedbackFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.CreateHospitalFeedbackFragment"
        android:label="CreateHospitalFeedbackFragment" >
        <action
            android:id="@+id/action_createHospitalFeedbackFragment_to_myFeedbacksFragment"
            app:destination="@id/myFeedbacksFragment" />
    </fragment>
    <fragment
        android:id="@+id/createDoctorFeedbackFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.CreateDoctorFeedbackFragment"
        android:label="CreateDoctorFeedbackFragment" >
        <action
            android:id="@+id/action_createDoctorFeedbackFragment_to_myFeedbacksFragment"
            app:destination="@id/myFeedbacksFragment" />
    </fragment>
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.UserProfileFragment"
        android:label="UserProfileFragment" >
        <action
            android:id="@+id/action_userProfileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_userProfileFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.AdminFragment"
        android:label="AdminFragment" >
        <action
            android:id="@+id/action_adminFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_adminFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_adminFragment_to_doctorFeedbackDetail"
            app:destination="@id/doctorFeedbackDetailFragment" />
        <action
            android:id="@+id/action_adminFragment_to_hospitalFeedbackDetail"
            app:destination="@id/hospitalFeedbackDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/doctorFeedbackDetailFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.DoctorFeedbackDetailFragment"
        android:label="DoctorFeedbackDetail" >
        <action
            android:id="@+id/action_doctorFeedbackDetail_to_adminFragment"
            app:destination="@id/adminFragment" />
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/hospitalFeedbackDetailFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.HospitalFeedbackDetailFragment"
        android:label="HospitalFeedbackDetail" >
        <action
            android:id="@+id/action_hospitalFeedbackDetail_to_adminFragment"
            app:destination="@id/adminFragment" />
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>