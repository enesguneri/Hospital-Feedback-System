<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_myFeedbacksFragment"
            app:destination="@id/myFeedbacksFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/myFeedbacksFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.MyFeedbacksFragment"
        android:label="MyFeedbacksFragment" >
        <action
            android:id="@+id/action_myFeedbacksFragment_to_createHospitalFeedbackFragment"
            app:destination="@id/createHospitalFeedbackFragment" />
        <action
            android:id="@+id/action_myFeedbacksFragment_to_createDoctorFeedbackFragment"
            app:destination="@id/createDoctorFeedbackFragment" />
    </fragment>
    <fragment
        android:id="@+id/createHospitalFeedbackFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.CreateHospitalFeedbackFragment"
        android:label="CreateHospitalFeedbackFragment" >
        <action
            android:id="@+id/action_createHospitalFeedbackFragment_to_myFeedbacksFragment"
            app:destination="@id/myFeedbacksFragment" />
    </fragment>
    <fragment
        android:id="@+id/createDoctorFeedbackFragment"
        android:name="com.enes.hospitalfeedbacksystem.view.CreateDoctorFeedbackFragment"
        android:label="CreateDoctorFeedbackFragment" >
        <action
            android:id="@+id/action_createDoctorFeedbackFragment_to_myFeedbacksFragment"
            app:destination="@id/myFeedbacksFragment" />
    </fragment>
</navigation>